/**
 * Classe para objetos do tipo Produto, onde serão contidos, valores e métodos para o mesmo.
 * @author Ricardo
 * @version 1.0
 * 
 */

package model;

import java.sql.Date;

public class Produto {
	
	private Integer codigo;
	private String nome;
	private Float valor;
	private Date validade;
	private Integer estoque;
	private Integer categoria;
	
	
	 /** 
	  * Método para recuperar o código do produto.
	  * @return Integer com o codigo do produto.
	  * */
	
	public Integer getCodigo() {
		return codigo;
	}
	
	 /** 
	 * Método para definição do código do produto.
	 * @param codigo Código do produto.
	 * */
	
	public void setCodigo(Integer codigo) {
		this.codigo = codigo;
	}
	
	 /** 
	  * Método para recuperar do nome do produto.
	  * @return String com o nome do produto.
	  * */
	public String getNome() {
		return nome;
	}
	
	/** 
	  * Método para definição do nome do produto.
	  * 
	  * @param nome Nome do produto
	  * */
	public void setNome(String nome) {
		this.nome = nome;
	}
	
	 /** 
	  * Método para recuperar o valor do produto.
	  * @return Float com o valor.
	  * */
	
	public Float getValor() {
		return valor;
	}
	
	 /** 
	 * Método para definição do valor do produto
	 * @param  valor valor do produto (preço)
	 * */
	
	public void setValor(Float valor) {
		this.valor = valor;
	}
	
	 /** 
	  * Método para recuperar a data do produto.
	  * @return Date com a data de validade no formato yyyy-MM-aa
	  * */
	
	
	public Date getValidade() {
		return validade;
	}
	
	 /** 
	 * Método para definição da data de validade do produto no  formato <b> yyyy-MM-aa </b>
	 * @param  validade a data de validade passada com o tipo Date que precisa ser importado do sql.
	 * */
	
	public void setValidade(Date validade) {
		this.validade = validade;
	}
	
	 /** 
	  * Método para recuperar a quantidade em produto.
	  * @return Integer com a quantidade
	  * */
	
	public Integer getEstoque() {
		return estoque;
	}
	
	 /** 
	 * Método para definição da quantidade em estoque do produto
	 * @param Integer estoque
	 * */
	
	public void setEstoque(Integer estoque) {
		this.estoque = estoque;
	}
	
	 /** 
	  * Método para recuperar a categoria produto.
	  * @return Integer com o numero relativo a categoria <b> ex: 1 é Proteina 2 é Laticínios 3 é de Limpeza e 4 são carnes </b>
	  * */
	
	public Integer getCategoria() {
		return categoria;
	}
	
	 /** 
	 * Método para definição da categoria do produto
	 * @param Integer categoria com o numero relativo a categoria
	 * */
	
	public void setCategoria(Integer categoria) {
		this.categoria = categoria;
	}
	
	
}
